<div class="container">
  <h1>Edit Expense</h1>

  <%= simple_form_for(@expense) do |f| %>
    <%= f.input :amount, label: 'Amount', required: true, autofocus: true %>
    <%= f.input :description, label: 'Description', required: true %>
    <%= f.input :merchant, label: 'Merchant', required: true %>
    <%= f.input :date, as: :date, label: 'Date', required: true %>
    <%= f.association :budget, label: 'Budget', prompt: 'Select a Budget', required: true %>

    <div class="form-group">
      <%= f.button :submit, 'Update Expense', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', expenses_path, class: 'btn btn-secondary mt-3' %>
</div>

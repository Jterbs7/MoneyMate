<div class="container">
  <h1 class="mt-4">Total expenses: <%= @total_expenses %>zar</h1>
  <h1 class="mt-4">Potential Savings: <%= @potential_savings %>zar</h1>

  <h2 class="mt-4 mb-4">last 7 days</h2>

  <%= link_to 'New Expense', new_expense_path, class: 'btn btn-primary mb-3' %>
  <div class="list-group">
    <% @expenses_last_seven_days.each do |expense| %>
      <div class="list-group-item">
        <div class="d-flex justify-content-between">
          <div>
            <%= expense.description %>: <%= expense.amount %>
          </div>
          <div>
            <%= link_to 'Show', expense, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Delete', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

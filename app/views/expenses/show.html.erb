<div class="container-expense">
  <div class="description">
    <div class="expense-header">
      <%= link_to :back do %>
        <i class="fa-solid fa-arrow-left mr-5"></i>
      <% end %>
      <h1><%= @expense.description %></h1>
    </div>
  </div>
  <div class="details">
    <div class="amount">
      <h2> Amount: R <%= @expense.amount %></h2>
    </div>
    <div class="merchant">
      <h2> Merchant: <%= @expense.merchant %></h2>
    </div>
    <div class="date">
      <h2> Date: <%= @expense.date.strftime("%A, %b %d") %></h2>
    </div>
  </div>
</div>

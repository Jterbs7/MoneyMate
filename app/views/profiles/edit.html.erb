<h2>Edit Profile</h2>

<%= simple_form_for @profile do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :username %>
    <%= f.input :age %>
    <%= f.input :monthly_income %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Profile" %>
  </div>
<% end %>

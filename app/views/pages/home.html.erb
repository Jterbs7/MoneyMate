<div class="top-message-section">
  <div class="home-avatar-greeting">
    <img src= "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtriFhIQBG7UD6xWQWA_xDB-quP3WKTpIdng&usqp=CAU" alt= "image" >
    <div class="home-greeting">
      <% current_hour = Time.now.hour %>
      <% if current_hour < 12 %>
        <h2 class = "animate__animated animate__fadeInDown"> Good Morning </h2>
      <% elsif  current_hour < 18 %>
        <h2>Good Afternoon</h2>
      <% else %>
        <h2 class = "animate__animated animate__fadeInDown"> Good Evening</h2>
      <% end %>
      <h1 class = "animate__animated animate__fadeInDown"><%= current_user.profile.first_name %><h1>
    </div>
  </div>
</div>
<div class="container-home">
  <div class="chart-card-message">
    <h3 class = "animate__animated animate__bounce"> <%= @message %> </h3>
  </div>
  <div data-controller="toggle">
    <div class="toggle-buttons">
      <div class="toggle-button-active" data-toggle-target="daybutton" data-action="click->toggle#day click->toggle#dayButton">
        Week
      </div>
      <div class="toggle-button" data-toggle-target="monthbutton" data-action="click->toggle#month click->toggle#monthButton">
        Month
      </div>
      <div class="toggle-button" data-toggle-target="yearbutton" data-action="click->toggle#year click->toggle#yearButton">
        Year
      </div>
    </div>
    <div class="chart-cards-section" data-toggle-target="day">
      <%= render "7_days", days_chart_data: @days_chart_data  %>
    </div>
    <div class="chart-cards-section" data-toggle-target="month" >
      <%= render "month", month_chart_data: @month_chart_data %>
    </div>
    <div class="chart-cards-section" data-toggle-target="year">
      <%= render "year", year_chart_data: @year_chart_data %>
    </div>
  </div>
</div>

